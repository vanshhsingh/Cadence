#:kivy 1.0.9
#:import ew kivy.uix.effectwidget

<MusicScreen>:
    EffectWidget:
        effects: [ew.VerticalBlurEffect(size=10),ew.HorizontalBlurEffect(size=10)]
        FitImage:
            source: 'Image/Post.jpg'

    MDBoxLayout:
        orientation: 'vertical'
        padding: ['10dp','30dp','10dp','50dp']
        
        SongCover:
            id: sc
            size: (250, 250)
            size_hint: (None,None)
            pos_hint: {'center_x': 0.5}
            

            RotatingImage:
                id: im
                source: 'Image/post.jpg'
                radius: [250, ]
        Widget:
            size_hint: None,None
            height: '25dp'
        Label:
            text: 'circles'
            bold: True
            font_size: '25sp'
            size_hint_y: None
        Label:
            text: 'Post Malone'
            size_hint_y: None
        MDBoxLayout:
            orientation:'vertical'
            Slider:
                id: progress
                color: [7,0,0,1]
                min:0
                max:100
                value:0
                background_width: '200dp'
                cursor_size:('10dp','10dp')
                value_track_color:[0,0,0,1]
                value_track:True
            MDBoxLayout:

                MyIcon:
                    icon:'restart'        
                MyIcon:
                    icon:'skip-previous-outline'
                MyIcon:
                    icon:'play-outline'
                    on_press: root.Play()
                MyIcon:
                    icon:'skip-forward'
                MyIcon:
                    icon:'skip-next-outline'
                    on_press: root.Next()
                MyIcon:
                    icon:'format-list-bulleted'
<MyIcon@MDIconButton>:
    color:[0.7,0,0,1]
    size_hint: None,None
    user_font_size: '20sp'
    theme_text_color: 'Custom'
    size:('20sp','20sp')
    text_color: [1,1,1,1]





<RotatingImage@FitImage>:
    angle: 0
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            origin: self.center
    canvas.after:
        PopMatrix   